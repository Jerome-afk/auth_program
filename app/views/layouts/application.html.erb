<!DOCTYPE html>
<html>
<head>
  <title>Manual Auth</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
      <div class="container-fluid">
        <%= link_to "Manual Auth", root_path, class: "navbar-brand" %>
        <div class="navbar-nav">
          <% if logged_in? %>
            <span class="nav-item nav-link">Welcome, <%= current_user.username %></span>
            <%= button_to "Logout", logout_path, method: :delete, class: "nav-item nav-link btn btn-link" %>
          <% else %>
            <%= link_to "Login", login_path, class: "nav-item nav-link" %>
            <%= link_to "Sign Up", signup_path, class: "nav-item nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>

    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %>">
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>